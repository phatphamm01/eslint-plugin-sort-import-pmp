{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2021", "DOM"],
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
